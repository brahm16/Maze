{% extends 'AgentGestionnaire.html.twig' %}
{% block body %}
    <div class="card" >
        <div class="card-body">
            <h3 class="card-title">Fournisseur</h3>
            <table class="table table-hover table-bordered">
                <tbody>
                <tr>
                    <th >Id</th>
                    <td >{{ fournisseur.id }}</td>
                </tr>
                <tr>
                    <th >Firstname</th>
                    <td >{{ fournisseur.firstname }}</td>
                </tr>
                <tr>
                    <th >Lastname</th>
                    <td >{{ fournisseur.lastname }}</td>
                </tr>
                <tr>
                    <th >Phonenumber</th>
                    <td >{{ fournisseur.phoneNumber }}</td>
                </tr>
                <tr>
                    <th >Address</th>
                    <td >{{ fournisseur.address }}</td>
                </tr>
                <tr>
                    <th >Email</th>
                    <td >{{ fournisseur.email }}</td>
                </tr>
                </tbody>
            </table>

            <ul>
                <li>
                    <a class="btn btn-warning" href="{{ path('fournisseur_index') }}">Back to the list</a>
                </li>
                <li>
                    <a class="btn btn-success" href="{{ path('fournisseur_edit', { 'id': fournisseur.id }) }}">Edit</a>
                </li>
                <li>
                    {{ form_start(delete_form) }}
                    <input class="btn btn-danger" type="submit" value="Delete">
                    {{ form_end(delete_form) }}
                </li>
            </ul>
        </div>
    </div>


{% endblock %}
