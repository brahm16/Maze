 <center><div class="col-lg-6 col-md-12">
   <div class="card">
    <div class="card-header card-header-warning">
     <h4 class="card-title">Materials Stats</h4>
     <p class="card-category">New Material</p>
    </div>
    <div class="card-body table-responsive">
     <table class="table table-hover">
      <thead class="text-warning">
      <th>IDM</th>
      <th>Reference</th>
      <th>Type</th>
      <th>Photo</th>
      </thead>
      <tbody>
      {% for matriel in matriels %}
       <tr>
        <td>{{matriel.IDM}}</td>
        <td>{{ matriel.reference}}</td>
        <td>{{ matriel.type}}</td>
        <td> <img style="height: 10%;width: 10%"  src="{{ asset('uploads/post/' ~ matriel.photo) }}" alt=""> </td>
       </tr>
      {% endfor %}
      </tbody>
     </table>
    </div>
   </div>
   <div class="card">
    <div class="card-header card-header-warning">
     <h4 class="card-title">Reservations Stats</h4>
     <p class="card-category">New Reservation</p>
    </div>
    <div class="card-body table-responsive">
     <table class="table table-hover">
      <thead class="text-warning">
      <th >ID</th>
      <th >STAFF_NAME</th>
      <th >Material_Type</th>
      <th >Reserved_at</th>
      <th >Recupered_at</th>
      </thead>
      <tbody>
      {% for reserv in reservations %}
       <tr>
        <td>{{ reserv.id }}</td>
        <td>{{ reserv.staff.firstname }}</td>
        <td>{{ reserv.matriel.type }}</td>
        <td>{% if reserv.recuperedat %}{{ reserv.reservedat|date('Y-m-d H:i:s') }}{% endif %}</td>
        <td>{% if reserv.recuperedat %}{{ reserv.recuperedat|date('Y-m-d H:i:s') }}{% endif %}</td>
       </tr>
      {% endfor %}
      </tbody>
     </table>
    </div>
   </div>
