{% extends 'AdminPage.html.twig' %}

{% block body %}
   <center> <h1>Liste des Utilisateurs</h1></center>
    <br><br><br><br><br><br>
    <table class="table table-hover table-bordered" id="dataTables-example">
        <thead>
        <tr>
            <th>IDU</th>
            <th>Username</th>
            <th>email</th>
            <th>Roles</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.IDU }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>{% for role in user.roles %}
                        {{ role }},
                    {% endfor %}</td>
                <td> <a href="{{ path('user_edit', { 'id': user.IDU }) }}"> <button  type="button" style="color: #4a148c;border-radius: 20%">edit </button></a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}