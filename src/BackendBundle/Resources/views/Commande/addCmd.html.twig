{% extends 'AgentGestionnaire.html.twig' %}

{% block body %}
    <form action="{{ path('add_cmd_trait') }}" method="post" id="form">
        <h3 style="color: white;">List des besoins</h3>
        <div class="form-group field-entrepots">

            <select name="f" id="f" class="form-control">
                {% for f in fournisseurs %}
                    <option value="{{ f.id }}">{{ f.firstname }}</option>
                {% endfor %}
            </select>


        </div>
        <table class="table table-hover table-bordered" id="dataTables-example">
            <th style="color: white;">#</th>
            <th style="color: white;">Reference</th>
            <th style="color: white;">Echeance</th>
            <th style="color: white;">Entrepot</th>
            {% for b in besoins %}
                <tr>
                    <td>
                        <div class="form-check">
                            <input type="checkbox" value="{{ b.id }}" class="form-check-input" id="{{ b.id }}" name="{{ b.id }}">
                        </div>
                    </td>
                    <td style="color: white;">{{ b.reference }}</td>
                    <td style="color: white;">{{ b.echeance|date }}</td>
                    <td style="color: white;">{{ b.entrepot.address }}</td>

                </tr>
            {% endfor %}
        </table>
        <br>
        <div class="form-group field-entrepots">

            <button type="submit" class="btn btn-primary btn-block">Ajouter <i class="fa fa-plus"></i></button>


        </div>
    </form>

