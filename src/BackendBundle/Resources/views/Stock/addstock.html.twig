{% extends 'AgentGestionnaire.html.twig' %}

{% block body %}
    <div class="card">
        <div class="card-body">
            <center><h2 class="contact-title">
                    <br><br>
                    ADD Stock
                </h2></center>
            <div class="form-group has-error">
                {{ form_start(form) }}
                {{ form_widget(form.quantity,{'attr':{'type':'text','class':'form-control','placeholder':'Quantity ...'}}) }}
                <br> <br> <br>
                {{ form_widget(form.unity,{'attr':{'type':'text','class':'form-control','placeholder':'Unity ...'}}) }}
                <br> <br> <center>
                    <div class="text-left" style="padding-left: 10px">
                        {{ form_row(form.product,{ 'label': 'Productroduct :' }) }}<br>
                        {{ form_row(form.entrepot,{ 'label': 'Entrepot :' }) }}
                    </div>
                    <br> <br> <br></center>
                <center> {{ form_widget(form.Add,{'attr':{'type':'text','class':'btn btn-common','placeholder':'ADD'}}) }}        </center>
                <br> <br> <br>
                {{ form_end(form) }}
            </div>

            <br><br><br>

            <div class="alert alert-warning" role="alert">
                <h3>
                    In order to add a new product you should an Gestionnaire,if you are not
                    you can list all our entrepot :) :)  </h3>

            </div>
        </div>
    </div>


{% endblock %}