{% extends 'AgentTransport.html.twig' %}
{% block body %}
    <div class="card">
        <div class="card-body">
            <h2 align="center"> Liste des Delivery</h2>


            <table class="table table-hover table-bordered">
                <tr>
                    <th  hidden="hidden">Reference</th>
                    <th hidden="hidden">Client Name</th>
                    <th hidden="hidden">Driver Name</th>
                    <th hidden="hidden">Address</th>
                    <th hidden="hidden">Statut</th>
                    <th></th>
                    <th><a href="{{ path('esprit_ajoutDelivery') }}">Ajouter</a></th>
                </tr>
            </table>
            <table class="table table-hover table-bordered" style="width:90%" border="1" align="center">

                <tr>
                    <th width="100">Reference</th>
                    <th width="100">Client Name</th>
                    <th width="100">Driver Name</th>
                    <th width="100">Address</th>
                    <th width="100">Statut</th>
                    <th width="100">Vehicule</th>
                    <th width="100"></th>
                    <th width="100"></th>

                </tr>

                {% for d in delivery %}
                    <tr>
                        <td align="center">{{ d.reference }}</td>
                        <td align="center">{{ d.clientName }}</td>
                        <td align="center">{{ d.driverName }}</td>
                        <td align="center">{{ d.address }}</td>
                        <td align="center">{{ d.statut }}</td>
                        <th width="100">{{ d.vehicule.matricule }}</th>
                        <td align="center"><a href="{{path('esprit_supprimeDelivery',{'id':d.id}) }}">Delete</a></td>


                        <td align="center"><a href="{{ path('esprit_export') }}">Export</a></td>

                    </tr>
                {% endfor %}

            </table>
        </div>
    </div
{% endblock %}
